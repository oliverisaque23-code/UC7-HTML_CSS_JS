        // Adiciona funcionalidade de clique na imagem principal para voltar
        document.getElementById('imagemPrincipal').addEventListener('click', function() {
            if(confirm('Deseja voltar para a página principal?')) {
                window.location.href = 'main.html';
            }
        });
        
        // Adiciona tecla ESC para voltar
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                window.location.href = 'main.html';
            }
        });
